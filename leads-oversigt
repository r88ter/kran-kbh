  <h1>Lead Oversigt - Kranudlejning KÃ¸benhavn</h1>
  <ul id="lead-list">
    <li>IndlÃ¦ser leads...</li>
  </ul>

  <script>
    // Skift denne URL til dit API endpoint, der returnerer leads som JSON
    const apiUrl = "https://dit-api-endpoint/lead";

    async function hentLeads() {
      const ul = document.getElementById("lead-list");
      ul.innerHTML = "<li>IndlÃ¦ser leads...</li>";

      try {
        const res = await fetch(apiUrl);
        if (!res.ok) throw new Error("NetvÃ¦rksfejl");

        const data = await res.json();

        if (data.length === 0) {
          ul.innerHTML = '<div class="no-leads">Ingen nye leads lige nu.</div>';
          return;
        }

        ul.innerHTML = "";

        data.forEach((lead) => {
          const li = document.createElement("li");

          li.innerHTML = `
            <div class="lead-name">${lead.name || "Ukendt navn"}</div>
            <div class="lead-email">ðŸ“§ ${lead.email || "-"}</div>
            <div class="lead-phone">ðŸ“ž ${lead.phone || "-"}</div>
          `;

          // TilfÃ¸j eventuelt link eller funktionalitet til at se mere eller betale her
          li.addEventListener("click", () => {
            alert(`Se detaljer for ${lead.name || "lead"}`);
            // Eller redirect til betalingsside etc.
          });

          ul.appendChild(li);
        });
      } catch (error) {
        ul.innerHTML = `<div class="no-leads">Fejl ved hentning af leads. PrÃ¸v igen senere.</div>`;
        console.error(error);
      }
    }

    hentLeads();
  </script>
